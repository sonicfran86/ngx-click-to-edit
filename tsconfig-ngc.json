{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "stripInternal": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "lib": ["dom", "es2015"]
  },
  "files": [
    "src/index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "./dist",
    "skipTemplateCodegen": true,
    "debug": true,
    "enableIvy": false
  }
}

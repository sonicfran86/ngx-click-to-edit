{
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": ["es5", "es2015", "dom"],
    "types": ["node","jasmine"]
  },
  "include": [
    "index.ts",
    "src/**/*",
    "test/**/*",
    "demo/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}